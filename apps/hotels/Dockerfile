# Build the docker image with `npx nx docker-build hotels`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t hotels`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system hotels && \
          adduser --system -G hotels hotels

COPY dist/apps/hotels hotels
RUN chown -R hotels:hotels .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix hotels --omit=dev -f install

CMD [ "node", "hotels" ]
